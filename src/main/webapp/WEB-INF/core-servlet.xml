<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 配置扫描器，管理所有controller -->
    <context:component-scan base-package="net.dqsy.manager.controller">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>
    <!-- 启动Springmvc注解驱动 -->
    <mvc:annotation-driven/>

    <!-- location:资源所在的文件夹， mapping：请求的url格式 -->
    <mvc:resources location="/css/" mapping="/css/**"/>
    <mvc:resources location="/js/" mapping="/js/**"/>
    <mvc:resources location="/images/" mapping="/images/**"/>
    <mvc:resources location="/fonts/" mapping="/fonts/**"/>
    <mvc:resources location="/html/" mapping="/**"/>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/page/"/>
        <property name="suffix" value=".jsp"/>
    </bean>


    <!-- 配置多媒体解析器 -->
    <bean id="multipartResolver"
          class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!-- 设定默认编码 -->
        <property name="uploadTempDir" value="/WEB-INF/temp"/>
        <property name="defaultEncoding" value="UTF-8"/>
        <!-- 设定文件上传的最大值50MB，50*1024*1024 -->
        <property name="maxUploadSize" value="52428800"/>
    </bean>

    <bean id="beanNameUrlMapping"
          class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"
          lazy-init="default" autowire="default">
        <property name="order">
            <value>1</value>
        </property>
    </bean>
    <bean id="urlMapping"
          class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="order">
            <value>2</value>
        </property>
    </bean>

    <bean id="methodNameResolver"
          class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">
        <property name="paramName">
            <value>action</value>
        </property>
    </bean>

    <!--文件上传-->
    <bean id="upload" class="net.dqsy.manager.common.upload.FileUpload"/>

    <bean name="/ueditController.do" class="net.dqsy.manager.controller.uedit.UeditController">
        <property name="methodNameResolver">
            <ref bean="methodNameResolver"/>
        </property>
    </bean>

    <bean name="/organizationRedirectController.do" class="net.dqsy.manager.controller.OrganizationRedirectController">
        <property name="methodNameResolver">
            <ref bean="methodNameResolver"/>
        </property>

        <property name="organizationService">
            <ref bean="organizationServiceImpl"/>
        </property>
    </bean>

    <bean name="/accountRedirectController.do" class="net.dqsy.manager.controller.AccountRedirectController">
        <property name="methodNameResolver">
            <ref bean="methodNameResolver"/>
        </property>
        <property name="accountService">
            <ref bean="accountServiceImpl"/>
        </property>
    </bean>

    <bean name="/activityRedirectController.do" class="net.dqsy.manager.controller.ActivityRedirectController">
        <property name="methodNameResolver">
            <ref bean="methodNameResolver"/>
        </property>
        <property name="activityService">
            <ref bean="activityServiceImpl"/>
        </property>
    </bean>

    <bean name="/departmentRedirectController.do" class="net.dqsy.manager.controller.DepartmentRedirectController">
        <property name="methodNameResolver">
            <ref bean="methodNameResolver"/>
        </property>
        <property name="departmentService">
            <ref bean="departmentServiceImpl"/>
        </property>
        <property name="organizationService">
            <ref bean="organizationServiceImpl"/>
        </property>
    </bean>


</beans>